<td>
  {{#if referral.imageUrl}}
    <img class="img-circle squatch-referrals-avatar" src="{{referral.imageUrl}}">
  {{else}}
    <img class="img-circle squatch-referrals-avatar" src="{{gravatar referral.email default="mm" rating="pg" size=40 secure=isSecureUrl}}">
  {{/if}}

  <div class="squatch-referrals-heading">{{stringEmptyHandler referral.firstName onEmpty="Anonymous"}}</div>

  <div class="squatch-referrals-description">
    <span class="hidden-sm">
      {{#if description}}
        {{description}}
      {{else}}
        {{#if reward}}
          {{variables 'widget.REFERRER_WIDGET.content.textVariables.completedReferral.user'}}
        {{else}}
          {{variables 'widget.REFERRER_WIDGET.content.textVariables.uncompletedReferral.user'}}
        {{/if}}
      {{/if}}
    </span>

    <span class="hidden-md
      {{#if reward}}
        text-green
      {{else}}
        text-yellow
      {{/if}}
    ">
      {{#if reward}}
        {{#if reward.value}}
          {{variables 'widget.REFERRER_WIDGET.content.textVariables.referralReward.credit.value'}}
        {{else}}
          {{#if referred}}
            {{format-reward 'REFERRED' includeUnit=true}}
          {{else}}
            {{format-reward 'REFERRER' includeUnit=true}}
          {{/if}}
        {{/if}}
      {{else}}
        {{#if referred}}
          {{variables 'widget.REFERRER_WIDGET.content.textVariables.pendingReward.referredReward'}}
        {{else}}
          {{variables 'widget.REFERRER_WIDGET.content.textVariables.pendingReward.referrerReward'}}
        {{/if}}
      {{/if}}
    </span>
  </div>
</td>

<td class="hidden-sm">
  <div class="squatch-referrals-heading">
    {{#if heading}}
      {{heading}}
    {{else}}
      {{#if reward}}
        {{variables 'widget.REFERRER_WIDGET.content.textVariables.completedReferral.title'}}
      {{else}}
        {{variables 'widget.REFERRER_WIDGET.content.textVariables.uncompletedReferral.title'}}
      {{/if}}
    {{/if}}
  </div>

  <div class="squatch-referrals-description" data-moment="true">{{dateReferred}}</div>
</td>
<td>
  <i class="icon squatch-referrals-icon
    {{#if reward}}
      icon-ok-circled text-green
    {{else}}
      icon-attention text-yellow
    {{/if}}
  "></i>

  <div class="squatch-referrals-heading hidden-sm">
    {{#if reward}}

      {{#if reward.value}}
        {{variables 'widget.REFERRER_WIDGET.content.textVariables.referralReward.credit.value'}}
      {{else}}
        {{#if referred}}
          {{format-reward 'REFERRED' includeUnit=true}}
        {{else}}
          {{format-reward 'REFERRER' includeUnit=true}}
        {{/if}}
      {{/if}}

    {{else}}
      {{variables 'widget.REFERRER_WIDGET.content.textVariables.pendingReward.title'}}
    {{/if}}
  </div>

  <div class="squatch-referrals-description hidden-sm
    {{#if reward}}
      text-green
    {{else}}
      text-yellow
    {{/if}}
  ">
      {{#if reward}}
        {{#if name}}{{name}} {{/if}}
        {{variables 'widget.REFERRER_WIDGET.content.textVariables.referralReward.giftcard.description'}}
      {{else}}
        {{variables 'widget.REFERRER_WIDGET.content.textVariables.pendingReward.giftcard'}}
      {{/if}}
  </div>
</td>
